<div class="container">

  <div class="row justify-content-center">
    <div class="col-4 grid-header-col">Company name</div>
    <div class="col-2 grid-header-col">Pegged to currency</div>
    <div class="col-4 grid-header-col">Remarks</div>
  </div>

  <% @organizations.each do |organization| %>
    <div class="row justify-content-center">
      <div class="col-4 grid-content-col"><%= organization.name %></div>
      <div class="col-2 grid-content-col"><%= organization.pegged_currency %></div>
      <div class="col-4 grid-content-col"><%= organization.remarks %></div>
    </div>
  <% end %>
</div>
