<div class="container">
  <p>
    Need to add or change any data here? <%= link_to "Submit", "https://github.com/dilumn/peggedplacetowork#addchange-company-data", :target => "_blank" %>
  </p>

  <div class="row justify-content-center">
    <div class="col-4 col-md-5 grid-header-col">Company name</div>
    <div class="col-3 col-md-2  grid-header-col">Pegged to currency</div>
    <div class="col-5 col-md-5 grid-header-col">Remarks</div>
  </div>

  <% @organizations.each do |organization| %>
    <div class="row justify-content-center">
      <div class="col-4 col-md-5 grid-content-col"><%= organization.name %></div>
      <div class="col-3 col-md-2 grid-content-col"><%= organization.pegged_currency %></div>
      <div class="col-5 col-md-5 grid-content-col"><%= organization.remarks %></div>
    </div>
  <% end %>

  <p class="mt-4">
    Thanks <%= link_to "Indrajith Ekanayake", "https://www.linkedin.com/in/indrajithek/", :target => "_blank" %> for
    preparing the initial <%= link_to "list", "https://www.linkedin.com/posts/indrajithek_i-did-a-survey-to-find-out-the-companies-activity-6911263524908388352-Ge8a", :target => "_blank" %>
  </p>
</div>
