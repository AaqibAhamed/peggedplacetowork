<div class="container">
  <div class="row justify-content-center text-center">
    <div class="col-6 grid-header-col">"Great" Place To Work Company name</div>
    <div class="col-6 grid-header-col">Pegged to foreign currency or not</div>
  </div>

  <% @organizations.each do |organization| %>
    <div class="row justify-content-center">
      <div class="col-6 grid-content-col"><%= organization.name %></div>

      <% if organization.pegged %>
        <div class="col-6 grid-content-col text-center">🥳 YES 💃</div>
      <% else %>
        <div class="col-6 grid-content-col text-center">🙅‍♂️ NO 💸</div>
      <% end %>
    </div>
  <% end %>
</div>